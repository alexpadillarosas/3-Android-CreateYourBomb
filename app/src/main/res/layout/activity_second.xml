<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

    <ImageView
        android:id="@+id/bomb1imageView"
        android:layout_width="75dp"
        android:layout_height="73dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:background="#4CAF50"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:onClick="selectBomb"
        android:src="@drawable/bomb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bomb2imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/bomb2imageView"
        android:layout_width="75dp"
        android:layout_height="73dp"
        android:background="#00BCD4"
        android:clickable="true"
        android:onClick="selectBomb"
        android:src="@drawable/dynamite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bomb3imageView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bomb1imageView"
        app:layout_constraintTop_toTopOf="parent"
         />

    <ImageView
        android:id="@+id/bomb3imageView"
        android:layout_width="75dp"
        android:layout_height="73dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="28dp"
        android:background="#FFEB3B"
        android:clickable="true"
        android:onClick="selectBomb"
        android:src="@drawable/nuclear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bomb2imageView"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/bombNameSecondTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="76dp"
        android:gravity="center"
        android:text="Select Your Bomb type"
        app:layout_constraintBottom_toTopOf="@+id/bomb2imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>